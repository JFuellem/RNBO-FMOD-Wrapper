    return FMOD_OK;
}

FMOD_RESULT F_CALLBACK FMOD_RNBO_@PLUGIN_NAME@_sys_deregister(FMOD_DSP_STATE *state)
{
    FMOD_RNBO_@PLUGIN_NAME@_Running = false;
    
    if (state && state->plugindata) {
        RNBOWrapper *wrapper = (RNBOWrapper *)state->plugindata;
        wrapper->Reset();
    }
    
    return FMOD_OK;
}

